{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Document Manifest Schema",
    "description": "Defines the structure for the main manifest.yaml file.",
    "type": "object",
    "properties": {
        "documents": {
            "type": "array",
            "description": "A list of all documents managed by the project.",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "The official title of the document. This will be directly passed as a parameter to the source. The source is free to use it or not.",
                        "minLength": 1
                    },
                    "source": {
                        "type": "string",
                        "description": "Path to the main .typ source file.",
                        "minLength": 1
                    },
                    "output": {
                        "type": "string",
                        "description": "The final output filename (e.g., 'document.pdf').",
                        "minLength": 1
                    },
                    "group": {
                        "type": "string",
                        "description": "The category group for the website (e.g., 'rtb', 'pb').",
                        "enum": [
                            "rtb",
                            "pb",
                            "cand",
                            "ddb"
                        ]
                    }
                },
                "required": ["title", "source", "output", "group"]
            }
        }
    },
    "required": ["documents"]
}

